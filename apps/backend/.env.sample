# Database Configuration
DB_URL=postgresql://username:password@host:port/db_name
DB_MAX_CONNECTIONS=20
DB_IDLE_TIMEOUT=15
DB_CONNECTION_TIMEOUT=5

# Server Configuration
PORT=3001
NODE_ENV=development

# JWT Configuration
JWT_SECRET=your-very-secure-jwt-secret-key-here-make-it-long-and-random-minimum-32-characters

# Cookie Configuration
COOKIE_ACCESS_TOKEN_MAX_AGE=900
COOKIE_REFRESH_TOKEN_MAX_AGE=604800
COOKIE_SAME_SITE=Strict
COOKIE_SECURE=false

# CORS Configuration
CORS_ORIGIN=http://localhost:3000
FRONTEND_URL=http://localhost:3000

# Security Configuration
BCRYPT_ROUNDS=12

# Rate Limiting Configuration
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=1000
RATE_LIMIT_AUTH_WINDOW_MS=900000
RATE_LIMIT_AUTH_MAX_REQUESTS=10
RATE_LIMIT_STRICT_WINDOW_MS=60000
RATE_LIMIT_STRICT_MAX_REQUESTS=20
RATE_LIMIT_USER_AGENT_LENGTH=50

# Pagination Configuration
DEFAULT_PAGE_SIZE=50
MAX_PAGE_SIZE=100
DASHBOARD_STATS_LIMIT=10

# Email Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@example.com
SMTP_PASS=your_email_password

# App Configuration
APP_NAME=Budget Tracker
APP_VERSION=1.0.0
